<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.qhjy.score_service.mapper.primary.KsjhMapper">

    <resultMap id="BaseResultMap" type="edu.qhjy.score_service.domain.entity.KsjhEntity">
        <id column="KSJHDM" property="ksjhdm" jdbcType="VARCHAR"/>
        <result column="KSJHMC" property="ksjhmc" jdbcType="VARCHAR"/>
        <result column="BMKSRQ" property="bmksrq" jdbcType="DATE"/>
        <result column="BMJZRQ" property="bmjzrq" jdbcType="DATE"/>
        <result column="FBSJ" property="fbsj" jdbcType="TIMESTAMP"/>
        <result column="JSSJ" property="jssj" jdbcType="TIMESTAMP"/>
        <result column="FBZT" property="fbzt" jdbcType="TINYINT"/>
        <result column="CJRXM" property="cjrxm" jdbcType="VARCHAR"/>
        <result column="CJRGZRYM" property="cjrgzrym" jdbcType="VARCHAR"/>
        <result column="CJSJ" property="cjsj" jdbcType="TIMESTAMP"/>
        <result column="GXRXM" property="gxrxm" jdbcType="VARCHAR"/>
        <result column="GXRGZRYM" property="gxrgzrym" jdbcType="VARCHAR"/>
        <result column="GXSJ" property="gxsj" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        KSJHDM, KSJHMC, BMKSRQ, BMJZRQ, FBSJ, JSSJ, FBZT,
        CJRXM, CJRGZRYM, CJSJ, GXRXM, GXRGZRYM, GXSJ
    </sql>

    <!-- 根据考试计划代码查询 -->
    <select id="selectByKsjhdm" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM KSJH
        WHERE KSJHDM = #{ksjhdm,jdbcType=VARCHAR}
    </select>

    <!-- 查询所有考试计划 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM KSJH
        ORDER BY CJSJ DESC
    </select>

</mapper>